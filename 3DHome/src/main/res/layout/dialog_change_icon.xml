<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical" >
        <!-- android:background="@color/white" -->

    <ImageView 
        android:layout_width="@dimen/edit_object_dialog_width"
        android:layout_height="5dip"
        android:background="@drawable/dialog_divider_horizonal"/>

    <LinearLayout 
        android:layout_width="@dimen/edit_object_dialog_width"
        android:layout_height="match_parent"
        android:orientation="horizontal" 
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/change_icon_dialog_appicon"
                android:layout_width="64dip"
                android:layout_height="64dip"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/change_icon_dialog_appname"
                android:layout_width="96dip"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:gravity="center"
                android:singleLine="false"
                android:text=""
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="8dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btn_select_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/change_icon_dialog_select_img" />
            <Button
                android:id="@+id/btn_reset_icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/change_icon_dialog_reset_img" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
