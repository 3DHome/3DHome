<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:orientation="vertical" >

    <ImageView 
        android:layout_width="@dimen/edit_object_dialog_width"
        android:layout_height="5dip"
        android:background="@drawable/dialog_divider_horizonal"/>

    <LinearLayout
        android:layout_width="@dimen/edit_object_dialog_width"
        android:paddingTop="5dp"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/change_label_dialog_edtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

            <requestFocus />
        </EditText>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/edit_object_dialog_width"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/change_label_dialog_btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/change_label_dialog_btnOK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/confirm" />

    </LinearLayout>

</LinearLayout>
