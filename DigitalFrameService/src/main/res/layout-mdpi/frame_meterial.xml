<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:showDividers="middle"
    android:background="#c7d6db">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="3.0"
        android:gravity="center"
        android:showDividers="middle"
        android:background="@drawable/digit_setting_bg_dark">

        <ImageButton
            android:id="@+id/material_black"
            android:layout_width="42dp"
            android:layout_height="42dp"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/material_black_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignRight="@id/material_black"
            android:background="@drawable/meterial_selected">
        </ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="3.0"
        android:gravity="center"
        android:showDividers="middle"
        android:background="@drawable/digit_setting_bg_dark">

        <ImageButton
            android:id="@+id/material_white"
            android:layout_width="42dp"
            android:layout_height="42dp"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/material_white_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignRight="@id/material_white"
            android:background="@drawable/meterial_selected">
        </ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="3.0"
        android:gravity="center"
        android:showDividers="middle"
        android:background="@drawable/digit_setting_bg_dark">

        <ImageButton
            android:id="@+id/material_wood"
            android:layout_width="42dp"
            android:layout_height="42dp"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/material_wood_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/material_wood"
            android:background="@drawable/meterial_selected">
        </ImageButton>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="3.0"
        android:gravity="center"
        android:showDividers="middle"
        android:background="@drawable/digit_setting_bg_dark">

        <ImageButton
            android:id="@+id/material_metal"
            android:layout_width="42dp"
            android:layout_height="42dp"
            >
        </ImageButton>

        <ImageButton
            android:id="@+id/material_metal_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_alignRight="@id/material_metal"
            android:background="@drawable/meterial_selected">
        </ImageButton>
    </RelativeLayout>

</LinearLayout>