<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:paddingTop="@dimen/title_bar_height"
	android:paddingBottom="@dimen/detail_fragment_bottom_height"
    android:orientation="vertical" >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0"
        android:fadingEdge="vertical"
        android:paddingBottom="20.0dip"
        android:paddingLeft="20.0dip"
        android:paddingRight="20.0dip"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >
			
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
	        android:paddingBottom="5.0dip"
	        android:paddingTop="20.0dip"
            android:orientation="horizontal"  
            android:gravity="center">

            <ImageView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:src="@drawable/icon_product_desc" />

	    	<TextView
	    	    android:id="@+id/lable_subject"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="center"
		        android:paddingLeft="8dip"
		        android:text="@string/product_info_subject"
		        style="@style/product_description_style" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip" >

                <TextView
                    android:id="@+id/lable_title"
                    style="@style/Description_Property.Title"
                    android:text="@string/product_info_title" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/Description_Property.Content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip" >

                <TextView
                    android:id="@+id/lable_author"
                    style="@style/Description_Property.Title"
                    android:text="@string/product_info_author" />

                <TextView
                    android:id="@+id/tv_author"
                    style="@style/Description_Property.Content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip" >

                <TextView
                    android:id="@+id/lable_size"
                    style="@style/Description_Property.Title"
                    android:text="@string/product_info_size" />

                <TextView
                    android:id="@+id/tv_size"
                    style="@style/Description_Property.Content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip" >

                <TextView
                    android:id="@+id/lable_version"
                    style="@style/Description_Property.Title"
                    android:text="@string/product_info_version" />

                <TextView
                    android:id="@+id/tv_version"
                    style="@style/Description_Property.Content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip" >

                <TextView
                    android:id="@+id/lable_update_time"
                    style="@style/Description_Property.Title"
                    android:text="@string/product_info_update_time" />

                <TextView
                    android:id="@+id/tv_update_time"
                    style="@style/Description_Property.Content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip" >

                <TextView
                    android:id="@+id/lable_download_count"
                    style="@style/Description_Property.Title"
                    android:text="@string/product_info_download_count" />

                <TextView
                    android:id="@+id/tv_download_count"
                    style="@style/Description_Property.Content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip" >

                <TextView
            		android:id="@+id/lable_rating"
                    style="@style/Description_Property.Title"
                    android:text="@string/product_info_rating" />
				<LinearLayout 
				   	android:layout_width="0dip"
            		android:layout_height="match_parent"
            		android:layout_weight="2.0"
            		android:layout_marginLeft="5.0dip"
            		android:gravity="center_vertical" >
				    
                <RatingBar
            		android:id="@+id/id_rating"
            		style="@style/Comment.RatingBar.ReadOnly"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"/>
				</LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5.0dip" >

                <TextView
                	android:id="@+id/lable_desc"
                    style="@style/Description_Property"
                    android:layout_width="wrap_content"
                    android:text="@string/product_info_desc"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc"
                style="@style/Description_Property"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.0dip"
                android:singleLine="false" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>