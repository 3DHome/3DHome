<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
     <!-- icon style -->
    <style name="base_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/buttonSelectableBackground</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="title_bar_icon" parent="@style/base_icon_style">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">@dimen/default_text_padding_left</item>
        <item name="android:paddingRight">@dimen/default_text_padding_right</item>
    </style>
    
     <style name="list_item_icon" parent="@style/base_icon_style">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">@dimen/default_text_padding_left</item>
        <item name="android:paddingRight">@dimen/default_text_padding_right</item>
    </style>
    
    <style name="actionBar_titleTest" >
     	<item name="android:textColor">@color/actionbar_title_text</item>
     	<item name="android:textSize">15dip</item>
    </style>
    
    <style name="titlebar_text"  parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
     	<item name="android:textColor">@color/actionbar_title_text</item>
    </style>
    
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    
    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>
    </style>
    
    <style name="Widget.Sherlock.ActionBar.Custom" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/actionBar_titleTest</item>
        <item name="android:background">@drawable/bg_actionbar</item>
        <item name="android:progressBarPadding">32dip</item>
        <item name="android:itemPadding">8dip</item>
    </style>
    
    <style name="Widget.Sherlock.ActionBar.Custom.black" parent="Widget.Sherlock.ActionBar.Custom">
        <item name="android:background">@drawable/bg_actionbar_black</item>
    </style>
    
    <style name="Widget.Holo.ActionButton.Overflow.Custom" parent="android:Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more</item>
    </style>
    
    <style name="Widget.Sherlock.ActionBar.TabView.Custom" parent="android:Widget.Holo.Light.ActionBar.TabView">
     	<item name="android:background">@drawable/tab_indicator_ab_holo</item>
    </style>
    
    <!-- Tab选项标签字体的样式 -->
    <style name="MyActionBarTabTextStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabText">        
        <item name="android:textColor">@drawable/tab_color</item>
        <item name="android:textSize">14sp</item>   
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Theme.Client.ActionBarTabBar" parent="android:style/Widget.Holo.ActionBar.TabBar">
    <item name="android:showDividers">none</item>
    <item name="android:background">@drawable/bg_tab</item>
</style>
    
    <style name="product_decription_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14dip</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>
    <style name="product_decription_style_grey">
        <item name="android:textColor">#979797</item>
        <item name="android:textSize">14dip</item>
    </style>
    
    <style name="downloadProgressBar_horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/download_progress_horizontal</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">12dip</item>
        <item name="android:maxHeight">12dip</item>
    </style>
    
    <style name="downloadProgressBar_horizontal.small" parent="downloadProgressBar_horizontal">
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">8dip</item>
    </style>
    
    <style name="product_item_text_tyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
     </style>
     
    <style name="Comment.RatingBar.Edit" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">23.0dip</item>
        <item name="android:progressDrawable">@drawable/comment_ratingbar</item>
        <item name="android:minHeight">23.0dip</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">false</item>
     </style>
     
    <style name="Comment.RatingBar.ReadOnly" parent="@android:style/Widget.RatingBar">
        <item name="android:maxHeight">20.0dip</item>
        <item name="android:progressDrawable">@drawable/resource_comment_ratingbar_readonly</item>
        <item name="android:minHeight">16.0dip</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">1</item>
        <item name="android:isIndicator">true</item>
    </style>
    
    <style name="comment_item_cotent_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14dip</item>
        <item name="android:paddingBottom">@dimen/comment_item_paddingBottom</item>
     </style>
     
    <style name="product_description_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
     </style>
     
    <style name="product_description_style.blue"  parent="product_description_style" >
        <item name="android:textColor">@color/actionbar_tab_textcolor</item>
     </style>
    <style name="product_description_style.white"  parent="product_description_style" >
        <item name="android:textColor">@color/white</item>
     </style>
     
    <style name="Description_Property"  parent="product_description_style" >
        <item name="android:layout_width">1.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="Description_Property.Title" parent="@style/Description_Property">
        <item name="android:gravity">left</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="Description_Property.Content" parent="@style/Description_Property">
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_weight">2.0</item>
    </style>
        <style name="HomeDialogStyle2" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.8</item>
    </style>
    
            
    <style name="HelperDialogStyle2" parent="@style/HomeDialogStyle2">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>